{% extends 'base.html.twig' %}

{% block title %}Modifier produit{% endblock %}

{% block body %}

	<div>
		<h3>Modifier produit</h3>
		{{form_start(form)}}
            <div>
                <div>
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                </div>
                <div>
                    {{ form_label(form.quantity) }}
                    {{ form_widget(form.quantity, {'attr':{'class':'product-quantity'}}) }}
                </div>
            </div>
            <div>
                <div>
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount, {'attr':{'class':'product-amount'}}) }}
                </div>
            <div>
            <div>
                <div>
                    {{ form_label(form.amountTVA) }}
                    {{ form_widget(form.amountTVA, {'attr':{'class':'product-amountTVA'}}) }}
                    <span>[Montant(€) * Qté] * 20% de la TVA</span>
                </div>
            <div>
            <div>
                <div>
                    {{ form_label(form.totalTVA) }}
                    {{ form_widget(form.totalTVA, {'attr':{'class':'product-totalTVA'}}) }}
                    <span>[Montant(€) * Qté] + Montant de la TVA</span>
                </div>
            <div>
            <div>
                <div>
                    {{ form_label(form.invoice) }}
                    {{ form_widget(form.invoice) }}
                </div>
            <div>
                <div>
                    <button>Enregistrer</button>
                </div>
            </div>
		{{form_end(form)}}
	</div>

{% endblock %}