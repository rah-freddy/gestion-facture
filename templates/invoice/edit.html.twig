{% extends 'base.html.twig' %}

{% block title %}Modifier facture{% endblock %}

{% block body %}

	<div>
		<h3>Modifier facture</h3>
		{{form_start(form)}}
            <div>
                <div>
                    {{ form_label(form.billDate) }}
                    {{ form_widget(form.billDate) }}
                </div>
                <div>
                    {{ form_label(form.billNumber) }}
                    {{ form_widget(form.billNumber) }}
                </div>
            </div>
            <div>
                <div>
                    {{ form_label(form.customer) }}
                    {{ form_widget(form.customer) }}
                </div>
            <div>
                <div>
                    <button>Enregistrer</button>
                </div>
            </div>
		{{form_end(form)}}
	</div>

{% endblock %}